// Prisma schema for Movies Tracker App
// Using Neon Serverless Postgres with @prisma/adapter-neon

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  password        String?
  name            String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  watchlist       WatchlistItem[]
  ratings         Rating[]
  notes           Note[]
  preferences     UserPreference?
  viewHistory     ViewHistory[]
  recommendations Recommendation[]

  @@map("users")
}

model WatchlistItem {
  id          String   @id @default(cuid())
  userId      String
  movieId     Int
  title       String
  posterPath  String?
  voteAverage Float?   @default(0)
  addedAt     DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@map("watchlist_items")
}

model Rating {
  id          String   @id @default(cuid())
  userId      String
  movieId     Int
  title       String
  posterPath  String?
  rating      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@map("ratings")
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  movieId   Int
  title     String
  posterPath String?
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@map("notes")
}

model UserPreference {
  id                  String   @id @default(cuid())
  userId              String   @unique
  favoriteGenres      Int[]    @default([])
  preferredLanguage   String   @default("en")
  adultContent        Boolean  @default(false)
  emailNotifications  Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model ViewHistory {
  id         String   @id @default(cuid())
  userId     String
  movieId    Int
  title      String
  posterPath String?
  viewedAt   DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, viewedAt])
  @@map("view_history")
}

model Recommendation {
  id          String   @id @default(cuid())
  userId      String
  movieId     Int
  title       String
  posterPath  String?
  voteAverage Float?   @default(0)
  reason      String?
  score       Float    @default(0)
  createdAt   DateTime @default(now())
  dismissed   Boolean  @default(false)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@index([userId, dismissed, score])
  @@map("recommendations")
}
